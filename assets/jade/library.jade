include mixins/_helpers
include mixins/_view_helpers

mixin documentation()
  .documentation
    block

doctype
html.no-js(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Library
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
    meta(name="format-detection", content="telephone=no")

    link(rel="shortcut icon", href="/static/favicon.ico")
    link(rel="apple-touch-icon", href="static/apple-touch-icon.png")

    +javascriptIncludeTag("modernizr.min")
    +stylesheetLinkTag("modern","screen")
    style.
      body {
        padding: 2em 1em;
      }
      @media screen and (min-width: 40em) {
        body {
          padding-left: 0;
          padding-right: 0;
        }
      }
      .example {
        padding: 2em 0;
      }
      .documentation {
        margin: 0 0 2em 0;
      }
      .documentation h2 {
        margin-bottom: 0.3em;
      }
      .documentation p {
        margin-bottom: 0.5em;
      }
      .documentation p:last-child {
        margin-bottom: 0;
      }


  body
    .middle-container
      .example
        .documentation
          h2 Masthead signed out
          p Generated with mastheadSignedOut() mixin
        header(role="banner")
          +mastheadSignedOut

      .example
        .documentation
          h2 Masthead signed in
          p Generated with mastheadSignedIn() mixin
        header(role="banner")
          +mastheadSignedIn

      .example
        .documentation
          h2 Status bar
          p Generated with statusBar() mixin
        +statusBar

      .example
        .documentation
          h2 Flash message success bar
          p Generated with flashMessageSuccessBar() mixin
        +flashMessageSuccessBar

      .example
        .documentation
          h2 Objective list page list item
          p Generated with objectiveListItem(objectiveTitle, numberOfDays) mixin
        ol.unstyled-list
          +objectiveListItem('!Build safer cycling networks in the streets of Madrid.', 30)
            | !London and Pairs are two prime examples of cycle super highway heaven. We need to show the world that Madrid too can be the pinncale in cycli...



      .example
        .documentation
          h2 Objective Draft message
          p Generated with ...
        .drafting-message.clj-drafting-message
          h2.drafting-message-title.l8n--drafting-message--title !Drafting has started on this objective!
          p.drafting-message-body.l8n--drafting-message--body
            | !This means that you can no longer ask or answer questions, comment, or invite new writers.
          a.drafting-message-link.clj-drafting-message-link.l8n--drafting-message--link.func--drafting-message-link(href="/objectives/#/drafts/latest")
            | !Contribute to the drafting progress.

      .example
        .documentation
          h2 Guidance text
          p Used to introduce overview of the page
        +guidanceText('Title goes here')
          ul
            li Suggest paragraph or lists

      .example
        .documentation
          h2 Goals
          p This is a complete list using the goalItem() mixin
        ul.goal-item-list.fa-ul
          +goalItem
            | Deep v heirloom Echo Park
          +goalItem
            | Drinking vinegar meggings
          +goalItem
            | Jean shorts biodiesel hoodie keytar mlkshk food truck


      .example
        .documentation
          h2 Question list item
          p Generated with questionItem(author, date) mixin
        ol.question-list
          +questionItem('!Chris Cheshire', '3 September 2015 07:41')
            | !What road surface should we use?

      .example
        .documentation
          h2 Blank question list item
          p Generated with questionItemBlank() mixin
        ol.question-list
          +questionItemBlank()

      .example
        .documentation
          h2 Comment list item
          p Generated with commentItem(author, date) mixin
        ol.comment-list
          +commentItem('Chris Cheshire', '3 September 2015 07:41')
            p We definitely need to look into Gran Via and Calle Mayor!

      .example
        .documentation
          h2 Blank comment list item
          p Generated with commentItemBlank mixin
        ol.comment-list
          +commentItemBlank()

      .example
        .documentation
          h2 No drafts
        .no-drafts-yet.clj-no-drafts-yet
          p.no-drafts-yet-text.clj-no-drafts-yet-text !There are no drafts yet.

      .example
        .documentation
          h2 Objective Writer list item with photo
          p Generated with writerItem(name, href, photo) mixin
        ul.writer-item-list
          +writerItem('Jenny Bloggs', '#', 'http://placekitten.com/g/80/80')
            | A cycling enthusiast, responsible for many safety policies in the UK.

      .example
        .documentation
          h2 Objective Writer list item without photo
          p Generated with writerItem(name, href, '') mixin
        ul.writer-item-list
          +writerItem('Jenny Bloggs', '#', '')
            | A cycling enthusiast, responsible for many safety policies in the UK.

      .example
        .documentation
          h2 Blank objective writer list item
          p Generated with writerItemBlank(name, href, photo) mixin
        ul.writer-item-list
          +writerItemBlank()

      .example
        .documentation
          h2 Invite writer form
          p Generated with inviteWriterForm()
        +inviteWriterForm()

      .example
        .documentation
          h2 Add question form
          p Generated with addQuestionForm(autofocus)
          p The optional autofocus param decides whether it should gain focus on page visit.
        +addQuestionForm()

      .example
        .documentation
          h2 Add comment form
          p Generated with addCommentForm()
        +addCommentForm()

      .example
        .documentation
          h2 Please sign in
          p Generated with pleaseSignIn()
        +pleaseSignIn()
          | to ...

      .example
        .documentation
          h2 Vote controls
          p Generated with voteUpDownControls()
          p Intended for questions and comments
        .list-item-actions
          +voteUpDownControls()

    +googleAnalytics('${trackingID}')
    +javascriptIncludeTag("scripts.min")
